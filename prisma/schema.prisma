generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

// TODO: add relations to News_has_Member, News_has_Household, and photo
model News {
  news_id          Int      @id @default(autoincrement())
  news_description String
  news_type        String
  news_date        DateTime
  news_time_stamp  DateTime

  @@unique(news_description)
}

model Household {
  id                  Int       @id @default(autoincrement())
  active              Boolean?
  name                String
  year                Int
  location            String?
  verse               String
  covenant            String
  big_little_title    String?
  //TODO: Add sibling_household
  description         String?
  //TODO: Add Saint[]
  //TODO: Add Pillar[]
  //TODO: Add Photo []
  //TODO: Add Aesthetics
  //TODO: Add News
  @@unique([name])
}
